{
  "extends": ["@eman/tslint-config"],
  "rules": {
    "no-unused-variable": { "severity": "off" },
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "max-line-length": {
      "options": {
        "ignore-pattern": "class [a-zA-Z]+ implements |^export {(.*?)}"
      }
    },
    "quotemark": {
      "options": ["double"]
    },
    "variable-name": {
      "options": ["ban-keywords", "check-format", "allow-pascal-case"]
    },
    "triple-equals": [true, "allow-undefined-check"],
    "interface-name": { "severity": "off" },
    "no-null-keyword": { "severity": "off" },
    "eofline": { "severity": "default" },
    "no-consecutive-blank-lines": { "severity": "default" }
  }
}
