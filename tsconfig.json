{
  "compilerOptions": {
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "jest"
    ],
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"],
      "@src/*": [
        "./src/*"
      ],
      "@demo/*": [
        "./demo/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}